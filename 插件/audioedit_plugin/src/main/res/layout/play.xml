<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:layout_height="wrap_content"
		style="?android:attr/buttonBarStyle"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:gravity="center">

		<Button
			android:layout_height="wrap_content"
			android:text="暂停"
			android:layout_width="wrap_content"
			android:id="@+id/playButton1"/>

		<Button
			android:layout_height="wrap_content"
			android:text="重置"
			android:layout_width="wrap_content"
			android:id="@+id/playButton2"/>

		<ToggleButton
			android:layout_height="wrap_content"
			android:textOn="写出"
			android:layout_width="wrap_content"
			android:id="@+id/playButton3"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal">

		<Button
			android:layout_height="wrap_content"
			android:text="波形"
			android:layout_width="wrap_content"
			android:id="@+id/playButton4"/>

		<Button
			android:layout_height="wrap_content"
			android:text="音轨"
			android:layout_width="wrap_content"
			android:id="@+id/playButton5"/>

		<Button
			android:layout_height="wrap_content"
			android:text="控制"
			android:layout_width="wrap_content"
			android:id="@+id/playButton6"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<CheckBox
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/playCheckBox1"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center">

		<TextView
			android:layout_height="wrap_content"
			android:text="进度"
			android:layout_width="wrap_content"/>

		<SeekBar
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/playSeekBar1"
			android:layout_weight="1.0"/>

	</LinearLayout>

</LinearLayout>

